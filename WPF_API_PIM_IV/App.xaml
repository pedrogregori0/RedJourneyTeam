<Application x:Class="WPF_API_PIM_IV.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_API_PIM_IV"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- Template padrao para os botoes de voltar e proximo -->
        <ControlTemplate x:Key="TemplateBotaoObrasArredondado" TargetType="Button">
            <Border CornerRadius="20" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
        </ControlTemplate>

    </Application.Resources>
</Application>
